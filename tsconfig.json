{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "baseUrl": "./",
    "outDir": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [ "esnext", "dom", "dom.iterable", "scripthost" ],
    "allowJs": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ]
}
